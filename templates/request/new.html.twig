{% extends 'base.html.twig' %}

{% block title %}New Request{% endblock %}

{% block body %}
    {% if app.flashes('error') %}
        <div class="alert alert-danger">
            {% for message in app.flashes('error') %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endif %}

    <h1>Create new Request</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.startDate) }}
            {{ form_widget(form.startDate) }}
            {% if form.startDate.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {% for error in form.startDate.vars.errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.endDate) }}
            {{ form_widget(form.endDate) }}
            {% if form.endDate.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {% for error in form.endDate.vars.errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.comment) }}
            {{ form_widget(form.comment) }}
            {% if form.comment.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {% for error in form.comment.vars.errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    {{ form_end(form) }}

    <a href="{{ path('employees_dashboard') }}">Back to dashboard</a>
{% endblock %}