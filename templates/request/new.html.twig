<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>New Request</title>
</head>
<body>

{% if form is defined and form.vars.errors|length > 0 %}
    <div style="color: red; font-weight: bold;">
        <p>There are errors in the form:</p>
        {% for error in form.vars.errors %}
            <p>{{ error.message }}</p>
        {% endfor %}
    </div>
{% endif %}

<h1>Create request</h1>

{{ form_start(form) }}

    <div>
        {{ form_label(form.startDate) }}
        {{ form_widget(form.startDate) }}
        {% for error in form.startDate.vars.errors %}
            <span>{{ error.message }}</span>
        {% endfor %}
    </div>

    <div>
        {{ form_label(form.endDate) }}
        {{ form_widget(form.endDate) }}
        {% for error in form.endDate.vars.errors %}
            <span>{{ error.message }}</span>
        {% endfor %}
    </div>

    <div>
        {{ form_label(form.comment) }}
        {{ form_widget(form.comment) }}
        {% for error in form.comment.vars.errors %}
            <span>{{ error.message }}</span>
        {% endfor %}
    </div>

{{ form_end(form) }}

<a href="{{ path('employees_dashboard') }}">Back to dashboard</a>

</body>
</html>