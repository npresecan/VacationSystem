{% extends 'base.html.twig' %}

{% block title %}Request{% endblock %}

{% block body %}
    <h1>Request</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ request.id }}</td>
            </tr>
            <tr>
                <th>NumberOfDays</th>
                <td>{{ request.numberOfDays }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ request.startDate ? request.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ request.endDate ? request.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ request.status }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ request.comment }}</td>
            </tr>
            <tr>
                <th>CreatedDate</th>
                <td>{{ request.createdDate ? request.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_request_index') }}">back to list</a>

    <a href="{{ path('app_request_edit', {'id': request.id}) }}">edit</a>

    {{ include('request/_delete_form.html.twig') }}
{% endblock %}
